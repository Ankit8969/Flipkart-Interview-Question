"""""
HTML

<h2>Learning</h2>
<input type="text" name="" id="textBox" />
<section>
    <h2>Default: </h2>
    <p id="default"></p>
</section>
<section>
    <h2>Debounce: </h2>
    <p id="debounce"></p>
</section>


""""


const test = document.getElementById('textBox');
const defaultText = document.getElementById('default');
const debounceText = document.getElementById('debounce');

function debounce(func, delay) {
  let timer = null;
  return function(...args) {
    clearTimeout(timer);
    timer = setTimeout(()=>{
      // func(...args);
      func.call(this, args);
    }, delay);
  }
}

function updateDebounceText(text) {
  debounceText.innerText = text;
}

const debouncedUpdateDebounceText = debounce(updateDebounceText, 1000);


test.addEventListener('input', (event)=>{
  defaultText.innerText = event.target.value;
  debouncedUpdateDebounceText(event?.target.value);
})
